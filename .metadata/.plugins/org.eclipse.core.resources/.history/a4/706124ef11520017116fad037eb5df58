package org.fmaes.simppaal.simulinktotimedautomata.utils;

/**
 * @author Predrag Filipovikj (predrag.filipovikj@mdh.se)
 *
 */
public class SimulinkUtils {

  /**
   * The function assumes that the blockId does not end with a slash.
   * @param globalBlockId
   * @return
   */
  public static String stripBlockFromId(String globalBlockId) {
    String globalIdWithoutBlockName = globalBlockId;
    int lastSlashIndex = globalBlockId.lastIndexOf('/');
    if (lastSlashIndex > 1) {
      globalIdWithoutBlockName = globalBlockId.substring(0, lastSlashIndex);
    }
    return globalIdWithoutBlockName;
  }

}
